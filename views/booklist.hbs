<h2>My Books - ({{books.length}})</h2>
{{#if books}}
    <div class="table-responsive-sm">
        <table class="table table-hover">
            <tread>
                <tr>
                    <th>Title</th>
                    <th colspan="2">Author</th>
                    <th colspan="3" class="d-print-none">
                        <a class="btn btn-sm btn-success" href="/addbookform">Add Book</a>
                    </th>
                </tr>
            </tread>
            <tbody>
                {{#each books}}
                    <tr>
                        <td>{{this.title}}</td>
                        <td colspan="2">{{this.author}}</td>
                        <td class="d-print-none">
                            <a class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal{{@index}}">Delete Book</a>
                            <!-- Button trigger modal -->
                            <!-- Modal -->
                            <div class="modal fade" id="exampleModal{{@index}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Delete Book</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <h5>Are you sure you want to delete: <u>{{this.title}}</u>?</h5>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        <button type="button" class="btn btn-danger">
                                            <a style="color: #ffffff; text-decoration: none;" href="/delete/{{this.title}}">Delete</a>
                                        </button>
                                    </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td>
                            <th class="d-print-none">
                                <a class="btn btn-sm btn-info" href="/addcommentform/{{this.title}}">Comment</a>
                            </th>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
{{/if}}
{{#unless books}}
    <div class="row mt-5">
        <div class="col">
            There are no registered books!
        </div>
    </div>
    <div class="row mt-2">
        <div class="col">
            <a class="btn btn-sm btn-success" href="/addbookform">Add Book</a>
        </div>
    </div>
{{/unless}}


