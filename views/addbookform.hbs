<form action="/doaddbook" method="post" class="myForm">
    <div class="container">
        <div class="row mb-3">
            <div class="col">
                <h1>Register new Book</h1>
            </div>
        </div>
        <fieldset class="border p-2 mb-3">
            <legend class="w-auto">Book elements</legend>
            <div class="row mb-3">
                <div class="col-md-2 col-sm-12 justify-content-end d-flex">
                    <label for="newBookTitle" class="col-form-label">Title</label>
                </div>
                <div class="col-md-10 col-sm-10">
                    <input type="text" class="form-control {{#if message.newBookTitle}} is-invalid {{/if}}" id="newBookTitle" value="{{title}}" name="newBookTitle" placeholder="Write the title of the Book" required>
                    <div class="valid-feedback">Perfect!</div>
                    <div class="invalid-feedback">{{message.newBookTitle.msg}}</div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-2 col-sm-12 justify-content-end d-flex">
                    <label for="newBookAuthor" class="col-form-label">Author</label>
                </div>
                <div class="col-md-10 col-sm-10 position-relative">
                    <input type="text" class="form-control {{#if message.newBookAuthor}} is-invalid {{/if}}" id="newBookAuthor" value="{{author}}" name="newBookAuthor" placeholder="Write the author(s) of the Book" required>
                    <div class="valid-feedback">Perfect!</div>
                    <div class="invalid-feedback">{{message.newBookAuthor.msg}}</div>
                </div>
            </div>
        </fieldset>
        <div class="row mb-3">
            <div class="col">
                <button type="submit" class="btn btn-primary mb-3">Register Book</button>
            </div>
        </div>
    </div>
</form>